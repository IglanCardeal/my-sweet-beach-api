{
  "name": "storm-glass-weather-api",
  "description": "API Restful para previsão do tempo que usa o serviço do Storm Glass API.",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Iglan Cardeal <cmtcardeal@outlook.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "yarn build && node dist/src/index.js",
    "dev": "NODE_ENV=development ts-node-dev src/index.ts",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint 'src/**/*.ts' 'test/**/*.ts' --fix",
    "test": "yarn test:unit && yarn test:functional",
    "test:functional": "jest --projects ./test --runInBand --all",
    "test:functional:watch": "jest --projects ./test --runInBand --watch --verbose",
    "test:unit": "jest --runInBand --all",
    "test:unit:watch": "jest --runInBand --watch --verbose",
    "prepare": "husky install"
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "yarn lint:fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IglanCardeal/stormglass-weather-api"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/config": "^0.0.39",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.21",
    "@types/module-alias": "^2.0.0",
    "@types/mongoose": "^5.11.97",
    "@types/nock": "^11.1.0",
    "@types/node": "^14.14.35",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-security": "^1.4.0",
    "git-commit-msg-linter": "^3.0.4",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nock": "^13.1.1",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.3",
    "yarn-deduplicate": "^3.1.0"
  },
  "dependencies": {
    "@overnightjs/core": "^1.7.5",
    "axios": "^0.21.1",
    "config": "^3.3.6",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "module-alias": "^2.2.2",
    "mongoose": "^5.13.7"
  }
}